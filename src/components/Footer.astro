---
import type {Footer} from '../base/interfaces';
import Navigation from './Navigation.astro';

const {navigationItems} = Astro.props as Footer;
---

<footer class="Footer container">
  <Navigation navigationItems={navigationItems} type="Primary" />
  <Navigation navigationItems={navigationItems} type="Secondary" />
</footer>

<style lang="scss" is:global>
  @use '../styles/mixins/breakpoints' as *;

  :root {
    --footer-height: 6rem;
  }

  @include from('extra-large') {
    :root {
      --footer-height: 8rem;
    }
  }
</style>
<style lang="scss">
  @use '../styles/mixins/breakpoints' as *;

  .Footer {
    align-items: center;
    display: grid;
    font-size: var(--font-size-medium);
    height: var(--footer-height);
    gap: 1rem;
    grid-template-columns: 1fr;
    grid-template-rows: repeat(2, 1fr);
    justify-content: center;

    @include from('large') {
      gap: 2rem;
      grid-template-rows: 1fr;
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
