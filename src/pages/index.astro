---
import type {Page} from '../base/interfaces';
import Base from '../layouts/base/base.astro';

const data: Page = {
  head: {
    metadata: {
      title: 'Diego Navarro',
      description: 'The page description',
    },
    links: {
      canonical: '',
    },
  },
  footer: {
    navigationItems: [
      {
        type: 'Primary',
        label: 'Github profile',
        link: {path: ''},
        asset: {
          type: 'Icon',
          alternativeText: 'Github icon',
          sources: [{path: 'github', width: 18}],
        },
      },
      {
        type: 'Primary',
        label: 'Linkedin profile',
        link: {path: ''},
        asset: {
          type: 'Icon',
          alternativeText: 'Linkedin logo',
          sources: [{path: 'linkedin', width: 18}],
        },
      },
      {
        type: 'Secondary',
        label: 'hello@diegognt.dev',
        link: {path: 'mailto:hello@diegognt.dev'},
      },
    ],
  },
  sections: [
    {
      components: [
        {
          config: {component: 'Hero'},
          data: {
            eyebrow: 'Hi, I am',
            heading: 'Diego Navarro',
            bodies: ['A Software Engineer'],
            asset: {
              type: 'Image',
              sources: [
                {
                  path: '/assets/avatar-small.svg',
                  width: 315,
                  breakpoint: 'small',
                },
                {
                  path: '/assets/avatar-medium.svg',
                  width: 420,
                  breakpoint: 'medium',
                },
                {
                  path: '/assets/avatar-large.svg',
                  width: 546,
                  breakpoint: 'large',
                },
              ],
              alternativeText:
                'This is an illustration with an engineer working on a computer.',
            },
          },
          ui: {
            layout: 'Default',
          },
        },
      ],
    },
  ],
};
---

<Base head={data.head} sections={data.sections} footer={data.footer} />
